#!/usr/bin/env bash

copy_certs () {
  cp /etc/letsencrypt/live/${SERVERIP}/fullchain.pem /etc/letsencrypt/taisun.crt
  cp /etc/letsencrypt/live/${SERVERIP}/privkey.pem /etc/letsencrypt/taisun.key
}

copy_certs
wait
# Make sure we kill off squid
kill -9 $(pgrep squid3)
/usr/bin/supervisorctl restart squid
exit 0
